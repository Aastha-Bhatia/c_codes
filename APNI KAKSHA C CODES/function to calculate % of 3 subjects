// Write a function to calculate percentage of a student from marks in science,maths and sanskrit.
#include<stdio.h>
int calculate(int a,int b,int c);
int main(){
    int a,b,c;
    printf("ENTER MARKS IN SCIENCE : ");
    scanf("%d",&a);
    printf("ENTER MARKS IN MATHS : ");
    scanf("%d",&b);
    printf("ENTER MARKS IN SANSKRIT : ");
    scanf("%d",&c);
    int answer=calculate(a,b,c);
    printf("THE TOTAL MARKS : %d percent",answer);
    return 0;
}
int calculate(int a,int b,int c){
    int total=(a+b+c)/3;
    return total;
}